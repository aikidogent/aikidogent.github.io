include ../icons/chevron-right

mixin news-teaser-content(image, title, text)
  - const hasImage = image !== ''
  if hasImage
    .image(style='background-image: url(' + image + ')')
  .content
    h3= title
    p= text
  +chevron-right()

mixin news-teaser(href, image, title, text, link_target)
  - const hasHref = href !== ''
  - const target = link_target ? link_target : '_self'
  li.news-teaser
    if hasHref
      a(href=href, target=target)
        +news-teaser-content(image, title, text)
    else
      .news-teaser-content
        +news-teaser-content(image, title, text)